		<item>
			<title><txp:title /></title>
			<description><description><txp:evaluate test="meta_description"><txp:meta_description format="" /><txp:else /><txp:php>
			/*
			 * Retrieve the first 20 words from the plain text body version from the 'textpattern' table.
			*/
			$words = safe_field('Body', 'textpattern', 'ID = "'.article_id(array()).'"');
			echo preg_replace('/((\w+\W*){20}(\w+))(.*)/', '${1}', $words);
			</txp:php></txp:evaluate></description>
			<link><txp:permlink /></link>
			<pubDate><txp:posted gmt="1" format="rfc822" /></pubDate>
			<guid isPermaLink="true"><txp:permlink /></guid>
		</item>
